<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="event" type="edu.kit.pse.gruppe1.goApp.client.model.Event"></variable>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.v7.widget.Toolbar
                android:id="@+id/event_info_toolbar"
                app:title="@{event.name}"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="4dp"
                android:background="@color/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        </android.support.v7.widget.Toolbar>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:elevation="2dp"
                  android:paddingBottom="5dp"
                  android:paddingTop="5dp"
                  android:textSize="26sp"
                  android:textColor="#000000"
                  android:background="@color/colorPrimary"
                  android:text="@string/participants"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/participants_recycler_view"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
        <fragment
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="edu.kit.pse.gruppe1.goApp.client.view.EventActivity"/>

    </LinearLayout>
</layout>