<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="event" type="edu.kit.pse.gruppe1.goApp.client.model.Event"/>
    </data>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/event_info_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center|top"
                  android:textAlignment="center"
                  android:text="@{event.name}"/>
        <TextView android:id="@+id/event_info_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center|top"
                  android:textAlignment="center"
                  android:layout_below="@id/event_info_name"
                  android:text="@{event.creator.name}"/>
        <TextView android:id="@+id/event_info_user"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center|top"
                  android:textAlignment="center"
                  android:layout_below="@id/event_info_time"
                  android:text="@{event.time.toString()}"/>
        <ImageButton android:id="@+id/accept_event"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/event_info_user"
                     android:src="@drawable/ic_accept"/>
        <ImageButton android:id="@+id/reject_event"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/event_info_user"
                     android:layout_toRightOf="@id/accept_event"
                     android:src="@drawable/ic_reject"/>
    </RelativeLayout>
</layout>