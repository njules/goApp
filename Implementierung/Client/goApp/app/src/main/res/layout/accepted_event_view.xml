<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="event" type="edu.kit.pse.gruppe1.goApp.client.model.Event"></variable>
    </data>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/event_info_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center|top"
                  android:textAlignment="center"
                  android:text="@{event.name}"/>
        <TextView android:id="@+id/event_info_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center|top"
                  android:textAlignment="center"
                  android:layout_below="@id/event_info_name"
                  android:text="@{event.creator}"/>
        <TextView android:id="@+id/event_info_user"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center|top"
                  android:textAlignment="center"
                  android:layout_below="@id/event_info_time"
                  android:text="@{event.time}"/>
        <Button android:id="@+id/start_event"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_info_user"
                android:text="@string/go"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"/>
    </RelativeLayout>
</layout>